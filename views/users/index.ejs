    <h1 class='pageTitle'>Users</h1>

    <div class='users'>
      <div class='container'>
        <div class='row'>
          <div class='col'>
            <main>
              <ul>
                <%for(let i = 0; i < users.length; i++) { %>
                  <li>
                    <a href="/users/<%=users[i].id%>">
                    <%=users[i].username%></a><br>
                    Location: <%=users[i].location%><br><br>
                  </li>
                <% } %>
              </ul>
            </main>
          </div>
        </div>
      </div>
    </div>



  </body>

